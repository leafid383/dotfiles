// Zellij Configuration
// Migrated from tmux config

// テーマ設定（tokyonight風）
theme "tokyo-night"

// マウス有効化
mouse_mode true

// コピーモード: vi風
copy_on_select true
scrollback_editor "vim"

// OSC 52 クリップボード連携
copy_command "pbcopy"

// ペイン・タブのインデックスを1始まりに
pane_frames true

// UI設定
default_layout "default"
default_mode "locked"

// ステータスバーを上部に表示（tmuxと同様）
ui {
    pane_frames {
        rounded_corners true
    }
}

// キーバインド設定
keybinds clear-defaults=false {
    locked {
        // ペイン分割（tmuxの | と - に対応）
        bind "Alt |" { NewPane "Right"; }
        bind "Alt -" { NewPane "Down"; }

        // ペイン移動（vim風: tmuxのh/j/k/lに対応）
        bind "Alt h" { MoveFocusOrTab "Left"; }
        bind "Alt j" { MoveFocus "Down"; }
        bind "Alt k" { MoveFocus "Up"; }
        bind "Alt l" { MoveFocusOrTab "Right"; }

        // ペインリサイズ
        bind "Alt H" { Resize "Increase Left"; }
        bind "Alt J" { Resize "Increase Down"; }
        bind "Alt K" { Resize "Increase Up"; }
        bind "Alt L" { Resize "Increase Right"; }

        // 新規タブ（tmuxのPrefix+cに対応）
        bind "Alt c" { NewTab; }

        // タブ切り替え
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }

        // VSCode風レイアウト（tmuxのPrefix+Vに対応）
        bind "Alt v" { NewTab { layout "vscode"; }; }

        // normalモードへの切り替え
        bind "Ctrl g" { SwitchToMode "Normal"; }
    }
    normal {
        // ペイン分割（tmuxの | と - に対応）
        bind "Alt |" { NewPane "Right"; }
        bind "Alt -" { NewPane "Down"; }

        // ペイン移動（vim風: tmuxのh/j/k/lに対応）
        bind "Alt h" { MoveFocusOrTab "Left"; }
        bind "Alt j" { MoveFocus "Down"; }
        bind "Alt k" { MoveFocus "Up"; }
        bind "Alt l" { MoveFocusOrTab "Right"; }

        // ペインリサイズ
        bind "Alt H" { Resize "Increase Left"; }
        bind "Alt J" { Resize "Increase Down"; }
        bind "Alt K" { Resize "Increase Up"; }
        bind "Alt L" { Resize "Increase Right"; }

        // 新規タブ（tmuxのPrefix+cに対応）
        bind "Alt c" { NewTab; }

        // タブ切り替え
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }

        // VSCode風レイアウト（tmuxのPrefix+Vに対応）
        bind "Alt v" { NewTab { layout "vscode"; }; }
    }
}
