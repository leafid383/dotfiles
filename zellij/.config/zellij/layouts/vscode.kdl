// VSCode風レイアウト
// ┌──────────┬─────────────────────┐
// │ FileTree │  Editor/Claude Code │
// │          │                     │
// │──────────│─────────────────────│
// │  Keifu   │     Terminal        │
// │ (Git)    │                     │
// └──────────┴─────────────────────┘

layout {
    pane split_direction="vertical" {
        // 左カラム（30%）
        pane split_direction="horizontal" size="30%" {
            // FileTree（上60%）
            pane size="60%" {
                command "/Users/direct_1013/.cargo/bin/ft"
                name "FileTree"
            }
            // Keifu/Git（下40%）
            pane size="40%" {
                command "/opt/homebrew/bin/keifu"
                name "Keifu"
            }
        }
        // 右カラム（70%）
        pane split_direction="horizontal" size="70%" {
            // Claude Code（上70%）
            pane size="70%" focus=true {
                command "/Users/direct_1013/.nvm/versions/node/v22.12.0/bin/claude"
                name "Claude Code"
            }
            // Terminal（下30%）
            pane size="30%" {
                name "Terminal"
            }
        }
    }
    pane size=2 borderless=true {
        plugin location="status-bar"
    }
}
